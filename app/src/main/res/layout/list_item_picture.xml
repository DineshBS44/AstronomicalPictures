<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="220dp"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/rv_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginEnd="10dp"
        android:foregroundGravity="center"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/apod_dem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/rv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="80dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/rv_picture"
        app:layout_constraintEnd_toEndOf="@+id/rv_picture"
        app:layout_constraintStart_toStartOf="@+id/rv_picture"
        app:layout_constraintTop_toTopOf="@+id/rv_picture" />

</androidx.constraintlayout.widget.ConstraintLayout>